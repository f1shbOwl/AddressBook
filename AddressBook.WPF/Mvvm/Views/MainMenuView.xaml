<UserControl x:Class="AddressBook.WPF.Mvvm.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddressBook.WPF.Mvvm.Views"
             xmlns:viewmodels="clr-namespace:AddressBook.WPF.Mvvm.ViewModels"
             xmlns:models="clr-namespace:AddressBook.Shared.Models;assembly=AddressBook.Shared"
             d:DataContext="{d:DesignInstance Type=viewmodels:MainMenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid>
        <StackPanel>
            <Label Content="List of all contacts" Margin="10,20,10,20" HorizontalContentAlignment="Center" FontSize="20"/>
            <Button Content="Add new Contact" Command="{Binding NavigateToAddViewCommand}" Height="50" Width="150" Margin="10,10"/>
            <Button Content="Show all Contact" Command="{Binding NavigateToListViewCommand}" Height="50" Width="150" Margin="10,10" />
        </StackPanel>
    </Grid>
    
</UserControl>
